{
	"info": {
		"name": "hotel-api",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "get-room",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Body matches string\", function () {",
							"    pm.expect(pm.response.text()).to.include(\"roomId\");",
							"});",
							"const rooms = pm.response.json().rooms;",
							"pm.environment.set(\"roomId\", rooms[rooms.length - 1].roomId);",
							"pm.environment.set('roomRequest', pm.request);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{url}}/room?checkIn=2026-01-01&checkOut=2026-01-10&guestsNum=2",
					"host": ["{{url}}"],
					"path": ["room"],
					"query": [
						{ "key": "checkIn", "value": "2026-01-01" },
						{ "key": "checkOut", "value": "2026-01-10" },
						{ "key": "guestsNum", "value": "2" }
					]
				}
			}
		},
		{
			"name": "add-room",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.sendRequest(pm.variables.get(\"url\") + '/room', (err, res) => {",
							"    let totalRooms = res.json().rooms.length;",
							"    pm.environment.set('totalRoomsBeforeRequest', totalRooms);",
							"});"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", () => {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.sendRequest(pm.variables.get(\"url\") + '/room', (err, res) => {",
							"    let totalRooms = res.json().rooms.length;",
							"    pm.test(\"Request should add new room to the service.\", () => {",
							"        pm.expect(totalRooms).to.be.eql(pm.environment.get(\"totalRoomsBeforeRequest\") + 1);",
							"    });",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"floor\": 1,\n    \"guestNum\": 2,\n    \"beds\": 1,\n    \"price\": 3000\n}",
					"options": { "json": { "language": "json" } }
				},
				"url": {
					"raw": "{{url}}/add-room",
					"host": ["{{url}}"],
					"path": ["add-room"]
				}
			}
		},
		{
			"name": "booking",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.sendRequest(pm.environment.get('roomRequest'), function (err, res) {",
							"    pm.test(\"Room resource is still accessible\", () => {",
							"        pm.expect(res.code).to.be.eq(200);",
							"    });",
							"    const responseBody = res.json();",
							"    const isRoomBooked = responseBody.rooms.filter(room => room.roomId == pm.environment.get('roomId')).length == 0;",
							"    pm.test(\"Booked room is not accessible anymore\", () => {",
							"        pm.expect(isRoomBooked).to.be.true;",
							"    });",
							"});",
							"pm.sendRequest(pm.request, (err, res) => {",
							"    pm.test(\"Can't book same room twice\", () => {",
							"        pm.expect(res.code).to.be.eq(409);",
							"    });",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"roomId\": {{roomId}}\n}",
					"options": { "json": { "language": "json" } }
				},
				"url": {
					"raw": "{{url}}/booking",
					"host": ["{{url}}"],
					"path": ["booking"]
				}
			}
		}
	]
}